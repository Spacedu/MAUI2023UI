<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EfeitoTransparente.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:acrylic="clr-namespace:Xe.AcrylicView;assembly=Xe.AcrylicView">

    <ScrollView>
        <Grid>

            <Image Aspect="Fill" Source="https://static.vecteezy.com/system/resources/previews/015/639/809/original/illustration-realistic-abstract-3d-cute-blue-sky-sun-clouds-isolated-on-background-vector.jpg" />
            <VerticalStackLayout>
                <Border Margin="20" BackgroundColor="#66FFFFFF" HeightRequest="200" StrokeThickness="0" VerticalOptions="Start" />
                <acrylic:AcrylicView Margin="20" Padding="20" EffectStyle="ExtraLight" HeightRequest="100">
                    <Label Text="Olá mundo!" />
                </acrylic:AcrylicView>
                <acrylic:AcrylicView Margin="20" Padding="20" EffectStyle="Custom" TintColor="OrangeRed" TintOpacity=".15" HeightRequest="100" >
                    <Label Text="Olá mundo!" />
                </acrylic:AcrylicView>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
