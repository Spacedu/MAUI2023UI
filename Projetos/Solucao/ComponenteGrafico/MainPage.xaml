<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ComponenteGrafico.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:componentes="clr-namespace:ComponenteGrafico.Componentes">
    <ContentPage.Resources>
        <ResourceDictionary>
            <componentes:Grafico x:Key="grafico" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">
            <GraphicsView
                Drawable="{StaticResource grafico}"
                HeightRequest="257"
                WidthRequest="246" />
            <GraphicsView HeightRequest="257" WidthRequest="246">
                <GraphicsView.Drawable>
                    <componentes:Grafico />
                </GraphicsView.Drawable>
            </GraphicsView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
