<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Lottie.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <skia:SKLottieView
                HeightRequest="200"
                IsAnimationEnabled="True"
                RepeatCount="-1"
                RepeatMode="Reverse"
                Source="coracao.json"
                WidthRequest="200" />
            <skia:SKLottieView
                HeightRequest="200"
                IsAnimationEnabled="True"
                RepeatCount="-1"
                RepeatMode="Restart"
                Source="shapes.json"
                WidthRequest="200" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
